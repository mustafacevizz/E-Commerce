<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/twSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="150dp"
            android:text="Giriş Yap"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/twLoginRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:text="Hesabın yok mu? Kaydol"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/etSignInEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>


        <EditText
            android:id="@+id/etSignInPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>
        <TextView
            android:id="@+id/twForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parolanızı Mı Unuttunuz?"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:textSize="16dp"/>
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btnLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giriş Yap"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            app:spinning_bar_color="@color/white"
            android:background="@color/g_orange_yellow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFbSignIn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:background="@drawable/facebook_login"
                android:layout_weight="1"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btGoogleSignIn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Google"
                android:background="@drawable/google_login"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>